@model Magazyn.Models.Warehouse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Warehouse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa magazynu</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Hasło</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!--poniższy div, tylko do debugowania-->
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                <input asp-for="ColorId" class="form-control" readonly/>
                <span asp-validation-for="ColorId" class="text-danger" ></span>
            </div>
            <div>
                <label class="control-label">Kolor tła</label>
                <input type="text" id='ColorPick' />                
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Logo</label>
                <input type="file" asp-for="Image" class="form-control" accept=".jpg, .jpeg, .png, .gif, .bmp" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label">Właściciel</label>
                <select asp-for="OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>
            <h3>Adres</h3>
            <div class="form-group">
                <label asp-for="Address.StreetName" class="control-label">Ulica</label>
                <input asp-for="Address.StreetName" class="form-control" />
                <span asp-validation-for="Address.StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.HouseNumber" class="control-label">Ulica</label>
                <input asp-for="Address.HouseNumber" class="form-control" />
                <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.LocalNumber" class="control-label">Ulica</label>
                <input asp-for="Address.LocalNumber" class="form-control" />
                <span asp-validation-for="Address.LocalNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Place" class="control-label">Ulica</label>
                <input asp-for="Address.Place" class="form-control" />
                <span asp-validation-for="Address.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.code" class="control-label">Ulica</label>
                <input asp-for="Address.code" class="form-control" />
                <span asp-validation-for="Address.code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ColorPick").spectrum({
            color: "#f00",
            flat: true,
            //showInput: true,  // Pokazuje kolor
            showButtons: false,
            move: function (color) {
                var selectedColor = color.toHexString();
                $("body").css("background-color", selectedColor);
                // Na razie nie działa
                //var lightColor = lightenHexColor(selectedColor, 20);
                //$("input").css("background-color", lightColor);
                $("#ColorId").val(selectedColor);
            }
        });
    </script>


}
